 <% if current_user.seller? %>
  <div class="row">
    <div class="col-md-3">
    <ul class="sidebar-list">
    <li class="sidebar-item"><i class="fa fa-female" aria-hidden="true"></i> <%= link_to "Mes articles", products_path,
  class: "sidebar-link" %></li>
    <li class="sidebar-item"><i class="fa fa-money" aria-hidden="true"></i>
   <%= link_to "Mes ventes", your_reservations_path,
  class: "sidebar-link active" %></li>
  <li class="sidebar-item">
        <%= link_to new_product_path do %>
        <i class="fa fa-plus-circle" aria-hidden="true"></i> Ajouter un article Ã  la boutique
      <% end %></li>
    </ul>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-money" aria-hidden="true"></i> Mes ventes
        </div>

        <div class="panel-body">
          <% @products.each do |product| %>
          <% product.reservations.order("id DESC").each do |reservation| %>

          <div class="row">
            <div class="col-md-2">
                <%= reservation.product.name %>
            </div>
            <div class="col-md-6">
              <%= link_to product_path(reservation.product) do %>
              <%= image_tag reservation.product.photos[0].image.url(:thumb) if reservation.product.photos.length > 0 %>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to user_path(reservation.user) do %>
              <%= image_tag avatar_url(reservation.user), class:"img-circle avatar-medium" %>
              <% end %>
            </div>
             <div class="col-md-2 right">
                <h4><%= reservation.price %> euros</h4>
             </div>
            </div>
            <hr>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
