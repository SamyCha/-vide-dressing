<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i> <%= link_to "Ma WishList", your_articles_path,
          class: "sidebar-link active" %></li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i> Ma WishList:
           <%= @articles.count %> articles ajouté(s)
         </div>
         <div class="panel-body">
      <% if @articles.count != 0 %>
          <% @articles.order("id DESC").each do |article| %>
          <div class="row">
            <div class="col-md-2">
              <strong><%= article.product.name %></strong><br>
            </div>
            <div class="col-md-2">
              <%= link_to product_path(article.product) do %>
              <%= image_tag article.product.photos[0].image.url(:thumb) if article.product.photos.length > 0 %>
              <% end %>
            </div>
            <div class="col-md-4">
              <%= article.product.brand %><br>
              <%= article.product.state %><br>
              <%= article.product.size %><br>
              (reférence de l'article: <%= article.product_id %>)
            </div>
            <div class="col-md-4">
              <span class="label label-info">prix: <%= article.price %> euros</span><br><br>
              <%= link_to user_path(article.product.user), class:"btn btn-primary" do %>
              Contacter le vendeur
              <% end %>
            </div>
          </div>
          <hr>
          <% end %>
      <% else %>
        Votre liste est vide
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

