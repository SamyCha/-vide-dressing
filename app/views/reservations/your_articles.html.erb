<div class="container-fluid">
<div class="row">
  <div class="col-md-3">
  <ul class="sidebar-list">
  <li class="sidebar-item"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i> <%= link_to "Mes achats", your_articles_path,
class: "sidebar-link active" %></li>
  </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i> Mes achats
      </div>
      <div class="panel-body">
        <% @articles.order("id DESC").each do |article| %>
        <div class="row">
          <div class="col-md-2">
              <%= article.product.name %>
          </div>
          <div class="col-md-6">
            <%= link_to product_path(article.product) do %>
            <%= image_tag article.product.photos[0].image.url(:thumb) if article.product.photos.length > 0 %>
            <% end %>
          </div>
          <div class="col-md-2">
            <%= link_to user_path(article.product.user) do %>
            <p>Contacter le vendeur:</p>
            <%= image_tag avatar_url(article.product.user), class:"img-circle avatar-medium" %>
            <% end %>
          </div>
           <div class="col-md-2 right">
              <span class="label label-primary">payÃ©: <%= article.price %> euros</span>
           </div>
        </div>
                <hr>
          <% end %>
      </div>
    </div>
  </div>
</div>
</div>
