<section id="section-jumbotron" class="jumbotron jumbotron-fluid text-white d-flex justify-content-center align-items-center">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <ul class="sidebar-list">
          <li class="sidebar-item"><i class="fa fa-search-plus" aria-hidden="true"></i> <%= link_to "Rechercher un article", search_path,
            class: "navbar-wagon-item navbar-wagon-link" %></li>
            <% if user_signed_in? %>
            <li class="sidebar-item"><i class="fa fa-shopping-basket"  aria-hidden="true"></i> <%= link_to your_articles_path, class: "sidebar-link active" do %>
              <% if current_user.reservations.count == 1 %>
              1 article dans mon panier
              <% elsif current_user.reservations.count > 1 %>
              <%= current_user.reservations.count %> articles dans mon panier
              <% else %>
              Panier vide
              <% end %>
              <% end %>
            </li>
            <li class="sidebar-item"><i class="fa fa-star-half-o" aria-hidden="true"></i>  <%= link_to "Notez un achat", rating_path, class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <% end %>
          </ul>
        </div>
        <h4><strong><i class="fa fa-shopping-basket"></i> Votre panier:</strong></h4>
        <div class="col-md-9">
          <%= render 'reservations/your_basket' %>
        </div>
      </div>
    </section>
