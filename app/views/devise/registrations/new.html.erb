<section id="section-jumbotron" class="jumbotron jumbotron-fluid text-white d-flex justify-content-center align-items-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <div class="box-shadow">
        <h4><%= image_tag "seller.png", heigth:70, width: 50 %> INSCRIPTION EN TANT QUE CREATEUR</h4>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render 'shared/devise_errors' %>
        <div class="form-group">
        <div  style="color:black;">
          <%= f.text_field :pseudo, autofocus: true, class: "form-control", placeholder: "Pseudo", :class=>"input-small" %>
        </div>
        </div>
        <div class="form-group">
        <div  style="color:black;">
          <%= f.text_field :address, placeholder: "Adresse postale", id:"user_input_autocomplete_address", :class=>"input-small" %>
          <input id="street_number" name="street_number" disabled type="hidden">
          <input id="route" name="route" disabled type="hidden">
          <input id="locality" name="locality" disabled type="hidden">
          <input id="country" name="country" disabled type="hidden">
        </div>
        </div>
        <div class="form-group">
        <div  style="color:black;">
          <%= f.email_field :email, autofocus: true, :class=>"input-small", placeholder: "Adresse email" %>
        </div>
        </div>
        <div class="form-group">
        <div  style="color:black;">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Créer un mot de passe", :class=>"input-small" %>
        </div>
        </div>
        <div class="form-group text-center">
         <div class="col-xs-3"> </div>
         <div class="col-xs-6">
         <div  style="color:black;">
           <%= f.select :choice, ['Choisir une formule','formule 4eur/mois', 'formule 6eur/mois', 'formule 8eur/mois'] %>
         </div>
         </div>
         <div class="col-xs-3"> </div>
       </div>
     <br><br><br>

       <div class="form-group">
         <div class="col-xs-2">
          <%= f.check_box :choice, class: "form-control" %>
        </div>
        <div class="col-xs-7">
          J'accepte <%=link_to "les conditions pour devenir créateur", conditions_path %>
        </div><br>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Devenir créateur", class: 'btn btn-md btn-info' %>
      </div><br>
      <% end %>
    </div>
  </div>
</div>
</div>
</section>
<script type="text/javascript"
src="https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_JAVASCRIPT_KEY']}"></script>



