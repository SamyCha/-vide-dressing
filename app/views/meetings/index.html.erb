<p id="notice"><%= notice %></p>
<div class="row>"
  <div class="col xs-12">
    <div class="container-fluid">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
        <div class="card-category">NOS PROCHAINS EVENEMENTS</div>
        <div class="card-description">
          <h2>Les armoires de Paris</h2>
        </div>
      </div>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-offset-2 col-xs-8">

      <% @meetings.each do |meeting| %>
      <div class="product">
        <div class='product-upvote'>
          <div class="product-arrow"></div>
          <div class='product-count'><%= meeting.start_time.strftime("%d/%m/%Y") %></div>
        </div>
        <div class='product-body'>
          <h3><%= meeting.name %></h3>
          <%= meeting.address %>
          <p>Détails: <%= meeting.details %></p>
        </div>

        <ul class="list-inline product-controls">



<% if user_signed_in? %>
<% if current_user.seller? %>
<li><%= link_to "Réserver un stand", meeting_participate_path(meeting), method: :post, class: 'btn btn-md btn-danger' %></li>
<% end %>
<% end %>

      </ul>
    </div>
    <% end %>
  </div>




