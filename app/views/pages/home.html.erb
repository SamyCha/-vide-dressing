
<section id="section-jumbotron" class="jumbotron jumbotron-fluid text-white d-flex justify-content-center align-items-center">
  <div class="container text-center">
    <div class="col-md-5">
      <h2>Les armoires de Paris</h2>
      <h4>Dénichez des articles
        <% if user_signed_in? %>
        <%= link_to slide_path do %> à proximité <% end %> ou
        <% end %>
        lors de<%= link_to meetings_path do %> nos evenements <% end %> et prenez contact gratuitement avec leurs vendeurs!</h4>
        <%= link_to search_path, class: "btn btn-info" do %>
        Découvrez nos articles
        <% end %>
        <br>
        <br>
    <% if @highlights.present? %>
        <% @highlights.each do |meeting| %>
        <h5>Vendeuse...Ne manquez pas <br>
          <%= link_to meeting.name, meeting_path(meeting.id) %></h5>
      <% end %>
      <% end %>










      </div>

      <div class="col-md-4">
      </div>


      <div class="col-md-3 ">
        <div class="box-shadow">
         <% if !user_signed_in? %>
         <section>
          <h4>Inscrivez-vous gratuitement</h4>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <%= f.text_field :pseudo, autofocus: true, class: "form-control", placeholder: "Pseudo" %><br>
          <div class="form-group">
            <%= f.text_field :address, placeholder: "Saisissez votre addresse..", id:"user_input_autocomplete_address", class: "form-control" %>
            <input id="street_number" name="street_number" disabled type="hidden">
            <input id="route" name="route" disabled type="hidden">
            <input id="locality" name="locality" disabled type="hidden">
            <input id="country" name="country" disabled type="hidden">
          </div>
          distance des articles
          <%= f.number_field :distance, class: "form-control"%><br>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "adresse email" %><br>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Créer un mot de passe" %>
          </div>
          <div><%= f.submit "S'inscrire",class: "btn btn-info"  %></div><br>
          <% end %>
<strong><%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Devenir vendeuse", new_registration_path(resource_name) %><br />
<% end -%></strong>

        </section>
        <% end %>
      </div>
    </div>
  </section>

</div>

