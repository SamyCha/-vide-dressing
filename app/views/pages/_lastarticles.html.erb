<div id="hidden-mobile">
  <div class="col-xs-12 text-center">
    <p>___________</p><h4><strong>Nos derniers articles mis en ligne</strong></h4>
  </div>
  <div class="col-xs-12">
    <% @selection.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag product.photos[0].image.url, style: 'height:125px;width:160px' if product.photos.length > 0  %>
        </div>
        <div class="panel-body">
          <div class="col-xs-12 text-center">
            <h5><%= link_to product.name, product %></h5><hr>
          </div>
          <div class="col-xs-6">
            <%= image_tag "brand.png", heigth:10, width: 20 %> <p><%= product.brand %></p><br>
            <%= image_tag "size.png", heigth:10, width: 20 %> <p><%= product.size %></p>
            <br>
          </div>
          <div class="col-xs-6">
            <div class="text-right">
              <% if user_signed_in? %>
              <% if @booked %>
              <%= image_tag "heart.png", heigth:15, width: 30 %>

              <% else %>
              <%= form_for([product, product.reservations.new]) do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit "ajouter Ã  ma liste" %>
              <% end %>
              <% end %>
              <% end %>
              <br><strong><p><%= product.price %> euros</p></strong>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
