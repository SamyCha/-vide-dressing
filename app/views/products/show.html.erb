<!-- Google maps -->
<div class="row">
  <div class="col-md-12">
    <div id="map"></div>
    <style>
      #map {
        height: 400px;
        width: 100%;
      }</style>
      <script>function initMap() {
        var uluru = {lat: <%= @product.latitude %>, lng: <%= @product.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAgkkYGH99wJ7N-wb_J6HcjTvu9KK-ZFiU&callback=initMap"></script>
  </div>
</div>
<!-- articles à proximité -->
<h3>Autres articles à proximité...</h3>
<div class="row">

  <% for product in @product.nearbys(2).limit(3) %>
  <div class="col-md-4">
    <div class="panel panel-default">

      <div class="panel-body">
        <strong><%= link_to product.name, product %></strong> (à <%= (product.distance*1.6).round(2) %> km)<br>
        <i class="fa fa-black-tie" aria-hidden="true"></i> <%= @product.brand %>
        <i class="fa fa-level-up" aria-hidden="true"></i> <%= @product.size %>
