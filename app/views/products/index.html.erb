<div class="container-fluid">

 <div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><i class="fa fa-female" aria-hidden="true"></i> <%= link_to "Mes articles en vente", products_path,
        class: "sidebar-link active" %></li>
        <li class="sidebar-item"><i class="fa fa-money" aria-hidden="true"></i>
         <%= link_to "Mes ventes", your_reservations_path,
         class: "sidebar-link" %></li>
         <li class="sidebar-item">
          <%= link_to new_product_path do %>
          <i class="fa fa-plus-circle" aria-hidden="true"></i> Ajouter un article à la boutique
          <% end %></li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading"><i class="fa fa-female" aria-hidden="true"></i> Mes articles en vente <br>(N'oubliez pas de passer votre article à vendu, une fois vendu, afin de pouvoir recevoir un commentaire)
          </div>
          <div class="panel-body">
            <% @products.each do |product| %>
            <% if product.status != true %>
            <div class="row">
              <div class="col-md-2 text-center">
                <%= image_tag product.photos[0].image.url(:thumb) if product.photos.length > 0 %><br>
                ref. <%= product.id %>
              </div>
              <div class="col-md-7">
                <strong><%= product.name %></strong>  (<%= product.price %> euros)
                <br>
                <span class="label label-success">produit en vente</span>
                <% if product.active? %>
                <span class="label label-success">annonce publiée</span>
                <% else %>
                <span class="label label-default">en cours de publication</span>
                <% end %>
                <br>
               dernière mis à jour: <%= timeago_tag product.updated_at, :lang => :fr  %><br>


              </div>

              <div class="col-md-3 text-center">
              <%= link_to "Modifier l'annonce", edit_product_path(product) %><br>

              <%= link_to "Supprimer cette annonce", products_path(product), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer l'article? Cela supprimera aussi vos conversations avec les acheteurs" } %><br>

                <%= link_to "L'article est vendu", edit_product_path(product) %>
              </div>
            </div>
            <hr>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
