<div class="container-fluid">
 <% if current_user.seller? %>
 <div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><i class="fa fa-female" aria-hidden="true"></i> <%= link_to "Mes articles en vente", products_path,
        class: "sidebar-link active" %></li>
        <li class="sidebar-item"><i class="fa fa-money" aria-hidden="true"></i>
         <%= link_to "Mes ventes", your_reservations_path,
         class: "sidebar-link" %></li>
         <li class="sidebar-item">
          <%= link_to new_product_path do %>
          <i class="fa fa-plus-circle" aria-hidden="true"></i> Ajouter un article à la boutique
          <% end %></li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading"><i class="fa fa-female" aria-hidden="true"></i> Mes articles en vente
          </div>
          <div class="panel-body">
            <% @products.each do |product| %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag product.photos[0].image.url(:thumb) if product.photos.length > 0 %>
              </div>
              <div class="col-md-7">
                <p><%= product.name %> (<%= product.price %>euros) </p>
                <br>
                <% if product.active? %>
                <span class="label label-success">annonce publiée</span>
                <% else %>
                <span class="label label-info">annonce en cours de publication</span>
                <% end %>
              </div>
              <div class="col-md-3 right">
                <%= link_to "Mettre à jour", edit_product_path(product), class: "btn btn-info" %><hr>
                <%= link_to "passer à article vendu", edit_product_path(product), class: "btn btn-success" %>
              </div>
            </div>
            <hr>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
