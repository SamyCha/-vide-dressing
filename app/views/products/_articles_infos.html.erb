<!-- Informations principales -->
<div class="col-md-8">
  <div class="row">
   <div class="col-md-3 text-center">
    <%= image_tag avatar_url(@product.user), class:"img-circle avatar-large" %>
    <br>
    <br>
    article vendu par:<br>
    <strong><%= link_to @product.user.pseudo ,user_path(@product.user) %></strong>
    <br>
    <span id="average_rating_header"></span> <%= @product.user.reviews.count %> commentaires<hr>
  </div>
  <div class="col-md-9">
    <div class="row text-center">
      <div class="col-sm-3">
       <i class="fa fa-female fa-2x" aria-hidden="true"></i>
       CATEGORIE: <%= @product.category %><hr>
     </div>
     <div class="col-sm-3">
      <i class="fa fa-black-tie fa-2x" aria-hidden="true"></i>
      MARQUE: <%= @product.brand %><hr>
    </div>
    <div class="col-sm-3">
     <i class="fa fa-level-up fa-2x" aria-hidden="true"></i>
     TAILLE: <%= @product.size %><hr>
   </div>
   <div class="col-sm-3">
    <i class="fa fa-adjust fa-2x" aria-hidden="true"></i>
    COULEUR: <%= @product.color %><hr>
  </div>
</div>
<h4><%= @product.name %> (<%= @product.state %>)</h4>
<p><%= @product.description %></p>
</div>
</div>
</div>
