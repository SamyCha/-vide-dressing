<div class="container-fluid">
  <div class="row">

    <div class="col-md-3">
      <%= image_tag avatar_url(@user), class: "avatar-full" %>
      <% if current_user != @user %>
      <div class="row-space-2">
        <%= link_to "Envoyer un message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary wide" %>
      </div>
      <% end %>
      <div class="panel panel-default">
        <div class="panel-heading">enregistr√© depuis: <%= timeago_tag @user.created_at, :lang => :fr  %>
        </div>
        <div class="panel-body"><strong><%= @user.pseudo %></strong><br>
          Nombre de commentaires: <strong><%= @user.reviews.count %></strong><br>
          Note moyenne: <strong> XXX</strong><br>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <h4>A propos de <%= @user.pseudo %>:</h4>
      <div class="description row-space-3">
        <%= @user.description %>
      </div>
    </div>


    <h4>Tous ses articles:</h4>
    <div class="row">
      <% @products.each do |product| %>
<!-- affiche tous les articles actif en vente -->
      <% if product.active? %>
      <div class="col-xs-12 col-sm-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= link_to product.name %> <span class="label label-success">article en vente</span><br>
            <i class="fa fa-black-tie" aria-hidden="true"></i> <%= product.brand %>
            <i class="fa fa-level-up" aria-hidden="true"></i> <%= product.size %>

<!-- affiche tous les aticles vendus -->
            <% elsif product.status? %>
            <div class="col-xs-12 col-sm-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <%= product.name %> <span class="label label-info">article vendu</span><br>
                  <i class="fa fa-black-tie" aria-hidden="true"></i> <%= product.brand %>
                  <i class="fa fa-level-up" aria-hidden="true"></i> <%= product.size %>
                  <br>
<!-- Si le produit vendu dispose d'un commentaire on l'affiche -->
                  <% if !product.reviews.blank? %>
                  <hr>
                  <% product.reviews.each do |review| %>
                  Commentaire:<br>
                  <%= image_tag avatar_url(review.user), class: "img-circle avatar-medium" %> <%= review.user.pseudo %>  <%= review.created_at.strftime("(%d/%m/%y)") %><br>
                  <%= review.comment %><br>
                </div>
              </div>
              <% end %>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

