<div class="row">
  <div class="col-md-3">
    <%= image_tag avatar_url(@user), class: "avatar-full" %>
    <div class="panel panel-default">
      <div class="panel-heading">Vérification
      </div>
      <div class="panel-body">Email: <%= @user.email %><br>Tél: <%= @user.phone %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.pseudo %></h2>
      <div class="description row-space-3">
        <%= @user.description %>
      </div>
      <h4>Articles (<%= @products.length %>)</h4><br>
        <div class="row">
          <% @products.each do |product| %>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading preview">
                <%= image_tag product.photos[0].image.url(:medium) if product.photos.length > 0 %>
              </div>
              <div class="panel-body">
                <%= link_to product.name, product %>
              </div>
            </div>
          </div>
          <% end %>
      </div>
  </div>
</div>
