<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag avatar_url(@user), class: "avatar-full" %>
      <% if current_user != @user %>
      <div class="row-space-2">
        <%= link_to "Envoyer un message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary wide" %>
      </div>
      <% end %>
      <div class="panel panel-default">
        <div class="panel-heading">enregistr√© depuis: <%= timeago_tag @user.created_at, :lang => :fr  %>
        </div>
        <div class="panel-body"><strong><%= @user.pseudo %></strong><br>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <h4>A propos de <%= @user.pseudo %>:</h4>
      <div class="description row-space-3">
        <%= @user.description %>
      </div>
      <!--Review pour utilisateur -->
      <h4>Evaluations des produits vendus par <%= @user.pseudo %>:</h4><br>
      <% @products.each do |product| %>
      <% if !product.reviews.blank? %>
      <% product.reviews.each do |review| %>
      <div class="row">
        <div class="col-md-2 text-center">
          <%= image_tag avatar_url(review.user), class: "img-circle avatar-medium" %><br>
          <%= review.user.pseudo %>
        </div>
        <div class="col-md-10">
          <%= link_to product.name, product %><br>
          <%= review.comment %><br>
          <%= review.created_at.strftime("(%d/%m/%y)") %>
        </div>
      </div>
      <% end %>
      <% end %>
      <% end %>


        <h4>Tous ses articles:</h4>
        <div class="row">
          <% @products.each do |product| %>
          <% if product.active? %>
          <div class="col-xs-12 col-sm-4">
            <div class="panel panel-default">
            <!-- image de l'article
              <div class="panel-heading preview">
                <%= image_tag product.photos[0].image.url(:medium) if product.photos.length > 0 %>
              </div>
            -->
            <div class="panel-body">
              <%= link_to product.category , product %>
              <%= link_to product.brand , product %> (<%= link_to product.price, product %>euros)<br>
              <%= link_to product.name, product %>
              <br>
              <span class="label label-success">article en vente</span>



              <% elsif product.status? %>
              <div class="col-xs-12 col-sm-4">
                <div class="panel panel-default">
            <!-- image de l'article
              <div class="panel-heading preview">
                <%= image_tag product.photos[0].image.url(:medium) if product.photos.length > 0 %>
              </div>
            -->
            <div class="panel-body">
             <%= link_to product.category , product %>
             <%= link_to product.brand , product %><br>
             <%= link_to product.name, product %>
             <br>
             <span class="label label-info">article vendu</span>
             <% end %>
           </div>
         </div>
       </div>
       <% end %>
     </div>
   </div>
 </div>
</div>

